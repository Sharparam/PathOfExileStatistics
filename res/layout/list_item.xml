<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="right"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_rank"
        android:text="99999"
        android:textSize="13.0sp"
        android:gravity="right"
        android:paddingRight="2.0dip"
        android:paddingTop="@dimen/item_vpadding"
        android:paddingBottom="@dimen/item_vpadding"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />
    <TextView
        android:id="@+id/item_name"
        android:text="FooBarBazFooBarBazFooBarBazFooBarBazFooBarBazFooBarBaz"
        android:textSize="13.0sp"
        android:paddingTop="@dimen/item_vpadding"
        android:paddingBottom="@dimen/item_vpadding"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.76"
        android:ellipsize="end"
        android:singleLine="true" />
    <TextView
        android:id="@+id/item_level"
        android:text="99"
        android:textSize="13.0sp"
        android:gravity="right"
        android:paddingRight="6.0dip"
        android:paddingTop="@dimen/item_vpadding"
        android:paddingBottom="@dimen/item_vpadding"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.3" />
    <TextView
        android:id="@+id/item_class"
        android:text="Marauder"
        android:textSize="13.0sp"
        android:paddingTop="@dimen/item_vpadding"
        android:paddingBottom="@dimen/item_vpadding"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:ellipsize="end"
        android:singleLine="true" />
    <TextView
        android:id="@+id/item_experience"
        android:text="#.##T"
        android:textSize="13.0sp"
        android:gravity="right"
        android:paddingRight="8.0dip"
        android:paddingTop="@dimen/item_vpadding"
        android:paddingBottom="@dimen/item_vpadding"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.54" />
</LinearLayout>
